{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "react": ["./global.react.d.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "vite/client"
    ],
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "types/**.d.ts",
    "types/**/**.d.ts"
  ],
  "exclude": [
    "**/dist/*.ts",
    "**/dist/*.d.ts"
  ]
}
